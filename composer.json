{
    "name": "hexlet/code",
    "description": "Differ - Hexlet PHP Project lvl2",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Differ\\": "src",
            "Differ\\Tests\\": "tests"
        },
        "files": [
            "src/Differ.php",
            "src/Parser.php",
            "src/Data.php",
            "src/Formatter/Formatter.php",
            "src/Formatter/Stylish.php",
            "src/Formatter/Plain.php",
            "src/Formatter/Json.php"
        ]
    },
    "authors": [
        {
            "name": "hostberg",
            "email": "noreply@hostberg.io"
        }
    ],
    "license": "MIT",
    "require": {
        "docopt/docopt": "^1.0",
        "lstrojny/functional-php": "^1.17",
        "symfony/yaml": "^6.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9.5"
    },
    "bin": [
        "bin/gendiff"
    ],
    "scripts": {
        "phpcs": "phpcs -- --standard=PSR12 src bin",
        "phpunit": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit tests --coverage-clover ./clover.xml"
        ]
    }
}
